	-# This Tells HubSpot To Include The Site Head
	{% include "custom/page/Layouts/Site_Page_Head.html" %}

	%body.landing-page.{{ builtin_body_classes }}

	%header
		.grid-wrapper
			.grid.one-thrid
				.logo
					{% logo "dataone_logo" %}
			.grid.two-thirds
		{{standard_header_includes}}

		{% image "landing_page_linked_hero_image" export_to_template_context=True, src="" %}
